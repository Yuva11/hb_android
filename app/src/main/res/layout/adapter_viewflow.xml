<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/viewfullLayoyt"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="48dp" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="270dp">

                        <ImageView
                            android:id="@+id/imageViewitemimg"
                            android:layout_width="match_parent"
                            android:layout_height="270dp"
                            android:scaleType="centerCrop" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="225dp"
                            android:alpha="0.95"
                            android:background="@drawable/gradiant_black_to_transparent"/>

                        <TextView
                            android:id="@+id/textViewdiscription"
                            android:layout_width="280dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:maxLines="3"
                            android:paddingBottom="5dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:textColor="#ffffff"
                            android:textSize="14sp"
                            android:text="this is a dummy text decription"
                            android:layout_gravity="center"
                            android:textStyle="italic"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="6dp" />

                    </RelativeLayout>

                    <!--
                    <com.HungryBells.util.ScaledImageView
                        android:id="@+id/imageViewitemimg"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:scaleType="centerCrop"/>
                        -->


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:paddingLeft="3dp"
                        android:layout_marginTop="10dp">

                        <ImageView
                            android:id="@+id/imageViewviewlogo"
                            android:layout_width="80dp"
                            android:layout_height="60dp"
                            android:adjustViewBounds="false"
                            android:contentDescription="@string/app_name"
                            android:layout_marginLeft="10dp"
                            android:background="#ffff16d7"
                            android:paddingTop="2dp"
                            android:scaleType="centerCrop"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" >

                                <LinearLayout
                                    android:layout_width="180dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"

                                    android:orientation="vertical"
                                    android:paddingBottom="5dp"
                                    android:layout_marginLeft="10dp">

                                    <TextView
                                        android:id="@+id/textViewRestName"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:singleLine="true"
                                        android:textColor="#ED6778"
                                        android:textSize="18sp"
                                        android:textStyle="normal"
                                        android:text="Res Name" />

                                    <TextView
                                        android:id="@+id/textViewRestaddress"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:maxLines="3"
                                        android:minLines="3"
                                        android:textColor="#ff9b9b9b"
                                        android:textSize="15sp"
                                        android:text="Address" />
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:id="@+id/imageView7"
                                    android:src="@drawable/location_pin_grey"

                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="52dp"
                                    android:layout_centerInParent="true" />

                                <TextView
                                    android:id="@+id/findDistance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="false"
                                    android:layout_alignParentTop="true"
                                    android:paddingBottom="10dp"
                                    android:paddingLeft="0dp"
                                    android:paddingRight="10dp"
                                    android:paddingTop="16dp"
                                    android:singleLine="true"
                                    android:textColor="#979797"
                                    android:textSize="13sp"
                                    android:textStyle="normal"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="18dp"
                                    android:layout_marginRight="6dp"
                                    android:text="3.2 Km" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:baselineAligned="false"
                        android:layout_marginBottom="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:baselineAligned="false"
                            android:orientation="horizontal"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:gravity="center_horizontal">

                            <TextView
                                android:id="@+id/textViewviewnewprice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="0dp"
                                android:textColor="#4A4A4A"
                                android:textSize="26sp"
                                android:textStyle="normal"
                                android:text="Rs 299"
                                android:layout_marginTop="0dp"
                                android:layout_marginRight="4dp" />

                            <TextView
                                android:id="@+id/textViewvieworiginaltext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="4dp"
                                android:textColor="#979797"
                                android:textStyle="normal"
                                android:text="Rs 499"
                                android:textAlignment="center"
                                android:layout_marginRight="4dp"
                                android:visibility="visible" />


                            <LinearLayout
                                android:id="@+id/discountLinearLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/round_rect_off_percentage"
                                android:layout_gravity="center"
                                android:layout_marginTop="0dp"
                                android:layout_marginLeft="4dp">

                                <TextView
                                    android:id="@+id/textViewdiscount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentTop="true"
                                    android:textColor="#ffffff"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:layout_gravity="center"
                                    android:text="12%"
                                    android:paddingLeft="2dp"
                                    android:paddingTop="1dp"
                                    android:paddingRight="2dp"
                                    android:paddingBottom="1dp" />


                                </LinearLayout>


                        </LinearLayout>

                        <!--
                        <RatingBar
                            android:id="@+id/ratingBar1"
                            style="@style/ratingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp"
                            android:clickable="false"
                            android:gravity="right"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:rating="4.0" />
                            -->
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <ImageView
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:adjustViewBounds="true"
                                android:contentDescription="@string/app_name"
                                android:gravity="center_horizontal"
                                android:src="@drawable/calendaricon" />

                            <TextView
                                android:id="@+id/dealendtime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:singleLine="true"
                                android:textColor="#393939"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:adjustViewBounds="true"
                                android:contentDescription="@string/app_name"
                                android:gravity="center_horizontal"
                                android:src="@drawable/timeicon" />

                            <TextView
                                android:id="@+id/availabiletime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:singleLine="true"
                                android:textColor="#393939"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/textViewquantity"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:gravity="center_horizontal"
                                android:textColor="#393939"
                                android:textSize="25sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"
                                android:singleLine="true"
                                android:text="@string/quantity"
                                android:textColor="#393939"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="#9b9b9b" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:baselineAligned="false"
                            android:orientation="horizontal" >

                            <RelativeLayout
                                android:id="@+id/diagonaldineinviewdeal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/background_diagonal" >

                                <RelativeLayout
                                    android:id="@+id/layoutdineinviewdeal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical" >

                                    <ImageView
                                        android:id="@+id/dineinimage"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_centerHorizontal="true"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="5dp"
                                        android:adjustViewBounds="true"
                                        android:contentDescription="@string/app_name"
                                        android:gravity="center_horizontal"
                                        android:src="@drawable/unselected_dinein" />

                                    <TextView
                                        android:id="@+id/textdineinviewdeal"
                                        android:layout_width="match_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_below="@+id/dineinimage"
                                        android:layout_gravity="center_horizontal"
                                        android:gravity="center_horizontal|center_vertical"
                                        android:singleLine="true"
                                        android:text="@string/dinein"
                                        android:textColor="#393939"
                                        android:textSize="15sp" />

                                    <ImageView
                                        android:id="@+id/imageViewdinedealavailability"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_alignBottom="@+id/dineinimage"
                                        android:layout_alignRight="@+id/dineinimage"
                                        android:src="@drawable/dealnotavailable" />
                                </RelativeLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/diagonaltakeawayviewdeal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/background_diagonal" >

                                <RelativeLayout
                                    android:id="@+id/layouttakeawayviewdeal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical" >

                                    <ImageView
                                        android:id="@+id/takeawayimage"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_centerHorizontal="true"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="5dp"
                                        android:adjustViewBounds="true"
                                        android:alpha="0.8"
                                        android:contentDescription="@string/app_name"
                                        android:gravity="center_horizontal"
                                        android:src="@drawable/unselected_deleviery" />

                                    <ImageView
                                        android:id="@+id/imageViewtakeawaydealavailability"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_alignBottom="@+id/takeawayimage"
                                        android:layout_alignRight="@+id/takeawayimage"
                                        android:src="@drawable/dealnotavailable" />

                                    <TextView
                                        android:id="@+id/texttakeawayviewdeal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/takeawayimage"
                                        android:layout_centerHorizontal="true"
                                        android:layout_gravity="center_horizontal"
                                        android:gravity="center_horizontal|center_vertical"
                                        android:singleLine="true"
                                        android:text="@string/takeaway"
                                        android:textColor="#393939"
                                        android:textSize="15sp" />
                                </RelativeLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/diagonaldoorviewdeal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/background_diagonal" >

                                <RelativeLayout
                                    android:id="@+id/layoutdoorviewdeal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical" >

                                    <ImageView
                                        android:id="@+id/doortodoorimage"
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_centerHorizontal="true"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="5dp"
                                        android:adjustViewBounds="true"
                                        android:alpha="0.7"
                                        android:contentDescription="@string/app_name"
                                        android:gravity="center_horizontal"
                                        android:src="@drawable/unselected_doordelivery" />

                                    <ImageView
                                        android:id="@+id/imageViewdoortodoordealavailability"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_alignBottom="@+id/doortodoorimage"
                                        android:layout_alignRight="@+id/doortodoorimage"
                                        android:src="@drawable/dealnotavailable" />

                                    <TextView
                                        android:id="@+id/textdoorviewdeal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/doortodoorimage"
                                        android:layout_centerHorizontal="true"
                                        android:layout_gravity="center_horizontal"
                                        android:gravity="center_horizontal|center_vertical"
                                        android:singleLine="true"
                                        android:text="@string/doordelivery"
                                        android:textColor="#393939"
                                        android:textSize="15sp" />
                                </RelativeLayout>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="#9b9b9b" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <!--
                        <RelativeLayout
                            android:id="@+id/buythisdeal"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"
                            android:background="#6c0000" >

                            <TextView
                                android:id="@+id/textViewbuynow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:text="@string/buynow"
                                android:textColor="#ffffff"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/zoomImageView"
                                android:layout_width="wrap_content"
                                android:layout_height="20sp"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@+id/textViewbuynow"
                                android:src="@drawable/buynow" />
                        </RelativeLayout>
                        -->

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="15dp" />
                    </LinearLayout>

                </LinearLayout>


                <ImageView
                    android:id="@+id/imageViewfavrest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="195dp"
                    android:contentDescription="@string/app_name"
                    android:padding="10dp"
                    android:src="@drawable/bookmark"
                    android:layout_marginLeft="270dp" />


            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>
    
    
    <RelativeLayout
        android:id="@+id/buythisdeal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/buy_now"
        android:baselineAligned="false" />

    <ImageView
        android:id="@+id/imageViewviewsoldout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/sold_out"
        android:visibility="gone" />

</RelativeLayout>