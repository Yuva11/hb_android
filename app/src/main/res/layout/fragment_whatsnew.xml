<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <com.felipecsl.asymmetricgridview.library.widget.AsymmetricGridView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/asymetricGridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/white"
        android:fadingEdge="none"
        android:focusable="false"
        android:gravity="center"
        android:dividerHeight="0dp"
        android:background="@android:color/white"
        />

     <com.twotoasters.jazzylistview.JazzyGridView
        android:id="@+id/stgv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:numColumns="2"
        android:horizontalSpacing="8dp"
        android:verticalSpacing="8dp"
        app:effect="helix"
        app:only_animate_new_items="false"
         android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/noads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <ImageView
            android:id="@+id/zoomImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/noadvertisement" />

        <TextView
            android:id="@+id/textViewnoAds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/zoomImageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/noads"
            android:textColor="#969696"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewnoAdsTry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewnoAds"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"

            android:textColor="#969696"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageViewretryads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewnoAdsTry"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/refreshicons" />
    </RelativeLayout>

</RelativeLayout>