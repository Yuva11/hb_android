<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg">

    <ImageView
        android:id="@+id/imageViewlogos"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo_600x486" />


    <ProgressBar
        android:id="@+id/progressBarhorizontal"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:indeterminateOnly="true"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/loginLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewlogos"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:singleLine="false"
            android:hint="Email"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:textCursorDrawable="@drawable/color_cursor_white"
            android:background="@drawable/edit_text_custom_theme"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:hint="Password"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:textCursorDrawable="@drawable/color_cursor_white"
            android:background="@drawable/edit_text_custom_theme"/>

        <Button
            android:id="@+id/buttonSignIn"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignRight="@+id/layout"
            android:layout_below="@+id/layout"
            android:layout_margin="20dp"
            android:background="@drawable/login_button"
            android:textColor="#fff" />

        <Button
            android:id="@+id/buttonSignUp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/loginLayout"
            android:layout_below="@+id/loginLayout"
            android:layout_marginTop="-20dp"
            android:background="@android:color/transparent"
            android:text="Sign Up"
            android:textSize="14dp"
            android:textColor="@android:color/white" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginLayout">



        <Button
            android:id="@+id/buttonSignIn_"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/layout"
            android:layout_below="@+id/layout"
            android:layout_marginTop="5dp"
            android:background="@drawable/login_signup"
            android:text="Log In"
            android:textColor="#fff"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/layout"
            android:layout_alignRight="@+id/layout"
            android:layout_below="@+id/loginLayout" >

            <TextView
                android:id="@+id/textView1log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="---------          OR LOGIN WITH          ----------"
                android:textColor="@android:color/white" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/socialBtnLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:id="@+id/facebookbutton"
                android:layout_width="60dp"
                android:layout_height="60dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/facebook_new" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/twitterbutton_"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/twitter_new" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/googlebutton_"
                android:layout_width="60dp"
                android:layout_height="60dp">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/google" />

            </RelativeLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:visibility="gone">



            <RelativeLayout
                android:id="@+id/linkedinbutton"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:padding="20dp" >

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/linkedin" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/twitterbutton"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/twitter_new"
                android:padding="20dp" >

                <ImageView
                    android:id="@+id/imageView4_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/twitter" />

            </RelativeLayout>

            <View
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <RelativeLayout
                android:id="@+id/googlebutton"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:padding="20dp" >

                <ImageView
                    android:id="@+id/imageView6_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/google" />
            </RelativeLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/textViewothers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonSignIn__"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="By Signing up &amp; Login you agree our"
            android:textSize="12dp"
            android:textColor="@android:color/white"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewothers"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/textViewtermsuse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/textViewterms"
                android:textColor="#4A91E0"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/textViewterms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text=" and "
                android:textSize="12dp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textViewprivacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textViewterms"
                android:textColor="#4A91E0"
                android:textSize="12dp"/>
        </RelativeLayout>

    </LinearLayout>



    <Button
        android:id="@+id/buttonSignUp_"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/loginLayout"
        android:layout_below="@+id/loginLayout"
        android:layout_marginTop="-15dp"
        android:background="@android:color/transparent"
        android:text="Sign Up"
        android:textSize="14dp"
        android:textColor="@android:color/holo_blue_dark"
        android:visibility="gone"/>

    <Button
        android:id="@+id/buttonSignIn__"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/layout"
        android:layout_below="@+id/layout"
        android:layout_marginTop="5dp"
        android:background="@drawable/login_signup"
        android:text="Log In"
        android:textColor="#fff"
        android:visibility="gone"/>



    <LinearLayout
        android:id="@+id/undobar"
        style="@style/UndoBar"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/undobar_message"
                style="@style/UndoBarMessage" />

            <ImageView
                android:id="@+id/zoomImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="22dp"
                android:src="@drawable/error" />

        </RelativeLayout>

        <Button
            android:id="@+id/undobar_button"
            style="@style/UndoBarButton" />
    </LinearLayout>

</RelativeLayout>
