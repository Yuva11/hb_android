<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical" >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:fillViewport="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:orientation="vertical" >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/settings_roundedcorner">

                    <ImageView
                        android:id="@+id/zoomImageViews"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_name" />

                    <TextView
                        android:id="@+id/textViewsetts1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="My Profile"
                        android:textColor="#4e4e4e"
                        android:textSize="20sp" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/profileedit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="#00000000"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Name"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="150dp"
                            android:background="@drawable/signup_text"
                            android:padding="1dp" >

                            <RelativeLayout
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/signup_inside" >

                                <ImageView
                                    android:id="@+id/imageViews1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:contentDescription="@string/app_name"
                                    android:padding="10dp"
                                    android:src="@drawable/ic_name" />
                            </RelativeLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#dfdfdf" />

                            <EditText
                                android:id="@+id/textViewprofirstname"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/signup_back"
                                android:ems="10"
                                android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM "
                                android:gravity="center_vertical"
                                android:hint="Name"
                                android:paddingLeft="5dp"
                                android:singleLine="true" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Email Address"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="150dp"
                            android:background="@drawable/signup_text"
                            android:padding="1dp" >

                            <RelativeLayout
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/signup_inside" >

                                <ImageView
                                    android:id="@+id/imageViewImagesOnly"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:contentDescription="@string/app_name"
                                    android:padding="10dp"
                                    android:src="@drawable/email" />
                            </RelativeLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#dfdfdf" />

                            <EditText
                                android:id="@+id/textViewpromailid"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/signup_back"
                                android:gravity="center_vertical"
                                android:hint="Email"
                                android:inputType="textEmailAddress"
                                android:paddingLeft="5dp"
                                android:singleLine="true" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Mobile Number"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="150dp"
                            android:background="@drawable/signup_text"
                            android:padding="1dp" >

                            <RelativeLayout
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/signup_inside" >

                                <ImageView
                                    android:id="@+id/imageView4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:contentDescription="@string/app_name"
                                    android:padding="10dp"
                                    android:src="@drawable/ic_phone" />
                            </RelativeLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#dfdfdf" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:textStyle="bold"
                                android:textSize="14dp"
                                android:text="+91" />
                            <EditText
                                android:id="@+id/textViewpromobile"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/signup_back"
                                android:ems="10"
                                android:gravity="center_vertical"
                                android:hint="Mobile"
                                android:imeOptions="actionDone"
                                android:digits="0123456789"
                                android:inputType="phone"
                                android:paddingLeft="5dp"
                                android:singleLine="true" />
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="15dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="Date of Birth"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="150dp"
                            android:background="@drawable/signup_text"
                            android:padding="1dp" >

                            <RelativeLayout
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/signup_inside" >

                                <ImageView
                                    android:id="@+id/imageView5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:contentDescription="@string/app_name"
                                    android:padding="10dp"
                                    android:src="@drawable/calendaricon" />
                            </RelativeLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#dfdfdf" />

                            <TextView
                                android:id="@+id/textViewprodob"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/signup_back"
                                android:ems="10"
                                android:gravity="center_vertical"
                                android:hint="Date of Birth"
                                android:paddingLeft="5dp"
                                android:singleLine="true"
                                android:textSize="17sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/settings_roundedcorner">

                    <ImageView
                        android:id="@+id/zoomImageView"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/settings" />

                    <TextView
                        android:id="@+id/textViewsetts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="Preferences"
                        android:textColor="#4e4e4e"
                        android:textSize="20sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/settings_roundedcorner"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/notificationprefs"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textOnlyContent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Notification "
                            android:textColor="#787878"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/arrow" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dfdfdf" />

                    <RelativeLayout
                        android:id="@+id/foodtypes"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/imageWithText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:text="Food Type"
                            android:textColor="#787878"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/arrow" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#dfdfdf" />

                    <RelativeLayout
                        android:id="@+id/cusines"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Cuisine "
                            android:textColor="#787878"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/arrow" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:padding="1dp" >

                <Button
                    android:id="@+id/buttonsinguupsubmit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/signup_submit"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="Save"
                    android:textColor="#fff" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/viewscrolledit"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/undobar"
        style="@style/UndoBar"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/undobar_message"
                style="@style/UndoBarMessage" />

            <ImageView
                android:id="@+id/imageViewerror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="22dp"
                android:src="@drawable/error" />
        </RelativeLayout>

        <Button
            android:id="@+id/undobar_button"
            style="@style/UndoBarButton" />
    </LinearLayout>

</RelativeLayout>