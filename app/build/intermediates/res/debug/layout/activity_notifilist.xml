<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="50dp" >

        <TextView
            android:id="@+id/textViewsetts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="Food Type"
            android:textColor="#616161"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#a3a3a3" />
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <ListView
        android:id="@+id/list_data"
        android:layout_width="match_parent"
        android:layout_above="@+id/layoutbottom"
        android:layout_marginBottom="10dp"
        android:layout_height="match_parent" />
    <LinearLayout
        android:id="@+id/layoutbottom"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#dfdfdf" />
        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="Next"
            android:textColor="#ffffff"
            android:id="@+id/buttonupdate"
            android:background="@drawable/signup_submit" />
    </LinearLayout>
</RelativeLayout>
</LinearLayout><!-- From: file:/Users/ajeetkumar/AndroidStudioProjects/clientWork/HungryBells/app/src/main/res/layout/activity_notifilist.xml -->