<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textViewnwtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d21617"
        android:padding="10dp"
        android:text="Delivery Address"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewdtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="#000000"
        android:text="@string/deliveryaddress"
        android:textSize="17sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:imeOptions="actionDone"
        android:ems="10"
        android:maxLength="200"
        android:padding="10dp"
        android:gravity="top|left"
        android:scrollHorizontally="false"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/signup_text"
        android:id="@+id/editTextdeliveryaddress" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#BABEC1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/buttondcancel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:layout_weight="1"
                android:text="Cancel" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#BABEC1" />
            <Button
                android:id="@+id/buttondok"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:layout_weight="1"
                android:text="OK" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/home/ftuser/Arunkumar/Backup/F%20Colon/Projects/HungryBell1812/app/src/main/res/layout/dialog_deliveryaddress.xml -->