<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/orderslayoutSummary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="5dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ORDER ID"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#464646"
            android:id="@+id/textView" />
        <TextView
            android:id="@+id/timeOfDelivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/textView"
            android:singleLine="true"
            android:textColor="#6a6a6a" />

        <TextView
            android:id="@+id/orderRefNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#cf1717"
            android:layout_marginLeft="5dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView" />

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <LinearLayout
                android:id="@+id/ratebars"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/animbar"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text="Rate"
                    android:background="#c81612"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ratedbars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_horizontal"
                    android:text="Rating"
                    android:textColor="#464646"
                    android:textSize="16sp" />

                <RatingBar
                    android:id="@+id/ratingBarUser1"
                    style="@style/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:clickable="false"
                    android:gravity="right"
                    android:isIndicator="true"
                    android:numStars="5"
                    />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@drawable/border_cart"
        android:padding="5dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <ImageView
                android:id="@+id/imageViewMetchant"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"

            android:paddingLeft="10dp"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/orderedItems"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:textColor="#5d5d5d"
                android:textSize="18sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:orientation="horizontal">
                <TextView
                    android:id="@+id/orderAmt"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:textColor="#5d5d5d"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/orderTotalAmt"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:textColor="#5d5d5d"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                </LinearLayout>

            <TextView
                android:id="@+id/deliveryStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/viewLines"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:background="#fe0000"
        android:layout_height="2dp" />
</LinearLayout><!-- From: file:/home/ftuser/Arunkumar/Backup/F%20Colon/Projects/HungryBell1812/app/src/main/res/layout-xlarge/orders_summarys.xml -->