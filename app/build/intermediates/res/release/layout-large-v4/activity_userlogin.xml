<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/signup_text"
                android:padding="1dp" >

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/signup_inside" >

                    <ImageView
                        android:id="@+id/imageViewic1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:padding="12dp"
                        android:src="@drawable/ic_name" />
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#dfdfdf" />

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="#fff" />

                <EditText
                    android:id="@+id/editTextusersname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/signup_back"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="User name"
                    android:inputType="textEmailAddress"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/signup_text"
                android:padding="1dp" >

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/signup_inside" >

                    <ImageView
                        android:id="@+id/imageViewic2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:padding="12dp"
                        android:src="@drawable/ic_password" />
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#dfdfdf" />

                <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="#fff" />

                <EditText
                    android:id="@+id/editTextemail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/signup_back"
                    android:gravity="center_vertical"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:singleLine="true" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/buttonLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/signup_submit"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="Log in"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/textViewForgetPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/textViewothers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/buttonLogin"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="By Signing up &amp; Login you agree our"
                    android:textColor="#a3a3a3" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewothers"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp" >

                    <TextView
                        android:id="@+id/textViewtermsuse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/textViewterms" />

                    <TextView
                        android:id="@+id/textViewterms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text=" and "
                        android:textColor="#a3a3a3" />

                    <TextView
                        android:id="@+id/textViewprivacy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/textViewterms" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#6b6b6b" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="375dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:baselineAligned="false"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/facebookbutton"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/loggin_facebook_bg"
                    android:gravity="center"
                    android:paddingTop="12dp" >

                    <ImageView
                        android:id="@+id/imageViewfacebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/facebookic" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/login_back_bg" >

                    <TextView
                        android:id="@+id/textViewlogfacebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="@string/facebooklogin"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/textsize" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/twitterbutton"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="13dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/loggin_twitter_bg"
                    android:gravity="center"
                    android:padding="7dp" >

                    <ImageView
                        android:id="@+id/imageViewtwitter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/twitter" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/login_back_bg" >

                    <TextView
                        android:id="@+id/textViewlogtwitter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="@string/twiterlogin"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/textsize" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/googlebutton"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="13dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/loggin_googleplus_bg"
                    android:gravity="center"
                    android:padding="7dp" >

                    <ImageView
                        android:id="@+id/imageViewgplus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/googleplus" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/login_back_bg" >

                    <TextView
                        android:id="@+id/textViewloggplus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="@string/gpluslogin"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/textsize" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linkedinbutton"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="13dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/loggin_linkedin_bg"
                    android:gravity="center"
                    android:padding="7dp" >

                    <ImageView
                        android:id="@+id/imageViewlinkedin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/linkedin" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/login_back_bg" >

                    <TextView
                        android:id="@+id/textViewloglinkedin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="@string/linkedinlogin"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/textsize" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/undobar"
        style="@style/UndoBar"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/undobar_message"
                style="@style/UndoBarMessage" />

            <ImageView
                android:id="@+id/imageViews1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="22dp"
                android:src="@drawable/error" />
        </RelativeLayout>

        <Button
            android:id="@+id/undobar_button"
            style="@style/UndoBarButton"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/ritesh/iOS/49apps/Projects/App%20Dev/HungryBells/HBCode/app/src/main/res/layout-large/activity_userlogin.xml -->